<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SQLitePrePopulated.TestItemPage">
	<ScrollView>
	<StackLayout>
		<Image Source="{Binding ImgLarge}"/>
		<ContentView BackgroundColor="Lime" Opacity="0.85" Margin="0,0,0,0" Padding="10">
			<Label Text="{Binding Name}" FontSize="20" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
		</ContentView>
		<ContentView BackgroundColor="Lime" Opacity="0.85" Margin="0,0,0,20" Padding="5">
			<Label Text="{Binding Info}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
		</ContentView>
		<WebView Source="{Binding URL}" WidthRequest="560" HeightRequest="275"/>
	</StackLayout>
	</ScrollView>
</ContentPage>
